{
  "name": "timeline-app-frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "A 3D Social Media App",
  "repository": {
    "type": "git",
    "url": "https://github.com/Asad13/timeline-app-frontend"
  },
  "author": {
    "name": "Asad Mujumder",
    "email": "asaduzzaman.anik.me@gmail.com",
    "url": "https://asad13.github.io"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --fix",
    "lint:check": "eslint \"./src/**/*.{ts,tsx}\" --max-warnings 0 --report-unused-disable-directives",
    "lint:test": "eslint \"./__tests__/**/*.{js,mjs,cjs,ts,mts,cts}\" --fix",
    "lint:all": "pnpm run lint:fix && pnpm run lint:test",
    "lint:ci": "eslint \"./src/**/*.{ts,tsx}\" \"./__tests__/**/*.{js,ts}\" --max-warnings=0",
    "lint:css": "stylelint \"src/**/*.css\" --fix",
    "lint:css:check": "stylelint \"src/**/*.css\"",
    "format": "prettier --write --ignore-unknown",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{css}": "stylelint --fix",
    "*.{js,ts,tsx,css,md,mdx,json,html}": "prettier --write"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "keywords": [
    "nodejs",
    "react",
    "typescript",
    "threejs",
    "3D"
  ],
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "clsx": "^2.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.6"
  }
}
